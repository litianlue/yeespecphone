<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="235dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="235dp"
        android:layout_centerInParent="true"
        android:background="@drawable/toast_background"/>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="230dp"
            android:layout_height="46dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:background="@mipmap/about"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="请输入中控端IP地址-"
            android:textColor="@color/BLACK"
            android:textSize="22sp"
            android:id="@+id/textView" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_ip1"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:inputType="numberDecimal"
                android:textColor="@color/BLACK"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_ip_dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et_ip1"
                android:text=" . "
                android:textColor="@color/BLACK"
                android:textSize="28sp"/>

            <EditText
                android:id="@+id/et_ip2"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_ip_dot1"
                android:inputType="numberDecimal"
                android:textColor="@color/BLACK"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_ip_dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et_ip2"
                android:text=" . "
                android:textColor="@color/BLACK"
                android:textSize="28sp"/>

            <EditText
                android:id="@+id/et_ip3"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_ip_dot2"
                android:inputType="numberDecimal"
                android:textColor="@color/BLACK"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_ip_dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et_ip3"
                android:text=" . "
                android:textColor="@color/BLACK"
                android:textSize="28sp"/>

            <EditText
                android:id="@+id/et_ip4"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_ip_dot3"
                android:inputType="numberDecimal"
                android:textColor="@color/BLACK"
                android:textSize="13sp"/>
        </RelativeLayout>

        <!--<Button-->
        <!--android:id="@+id/btn_confirm"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="48dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="48dp"-->
        <!--android:text="确认"-->
        <!--android:textSize="24sp"-->
        <!--android:visibility="gone"/>-->

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#2525b3"
            android:text="确认"
            android:textColor="@color/WHITE"
            android:textSize="22sp"/>

    </LinearLayout>


    <!--<TextView-->
    <!--android:id="@+id/tv_connecting_text"-->
