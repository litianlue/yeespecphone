<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/WHITE"
              android:fitsSystemWindows="true"
              android:gravity="bottom"

              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="300dp"
                    android:layout_height="63dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/about"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:text="请输入中控端IP地址"
                    android:textColor="@color/BLACK"
                    android:textSize="40sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp">

                    <EditText
                        android:id="@+id/et_ip1"
                        android:layout_width="56dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:textColor="@color/BLACK"

                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_ip_dot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/et_ip1"
                        android:text=" . "
                        android:textColor="@color/BLACK"
                        android:textSize="32sp"/>

                    <EditText
                        android:id="@+id/et_ip2"
                        android:layout_width="56dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_ip_dot1"
                        android:inputType="numberDecimal"
                        android:textColor="@color/BLACK"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_ip_dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/et_ip2"
                        android:text=" . "
                        android:textColor="@color/BLACK"
                        android:textSize="32sp"/>

                    <EditText
                        android:id="@+id/et_ip3"
                        android:layout_width="56dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_ip_dot2"
                        android:inputType="numberDecimal"
                        android:textColor="@color/BLACK"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_ip_dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/et_ip3"
                        android:text=" . "
                        android:textColor="@color/BLACK"
                        android:textSize="32sp"/>

                    <EditText
                        android:id="@+id/et_ip4"
                        android:layout_width="56dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_ip_dot3"
                        android:inputType="numberDecimal"
                        android:textColor="@color/BLACK"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:text="确认"
                    android:textSize="24sp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!--<TextView-->
