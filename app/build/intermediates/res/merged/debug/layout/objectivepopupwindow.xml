<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
     android:layout_width="540dp"
    android:background="@drawable/toast_background"
    android:layout_height="220dp">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <RelativeLayout

        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/objective_min"
                android:background="@mipmap/enlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <TextView
                android:id="@+id/objective_min_tv"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="0X"
                android:textColor="#78797c"
                android:textSize="25sp"
                />
        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <RelativeLayout

        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/objective_mid"
                android:background="@mipmap/enlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <TextView
                android:id="@+id/objective_mid_tv"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="0X"
                android:textColor="#78797c"
                android:textSize="25sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <RelativeLayout

        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/objective_max"
                android:background="@mipmap/enlarge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <TextView
                android:id="@+id/objective_max_tv"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="0X"
                android:textColor="#78797c"
                android:textSize="25sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
</LinearLayout>
