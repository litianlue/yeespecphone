<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/WHITE"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/wifi_name_view"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical"
        android:textColor="@color/material_blue_grey_950"
        android:textSize="16sp"
        android:text="wifi_name" />

    <ImageView
        android:id="@+id/label_level"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/wifi_3"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/label_lock"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/label_level"
        android:background="@mipmap/lock_wifi"
        android:gravity="center_vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:background="#cccccc"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>